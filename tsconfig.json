{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": ["ES2022"],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "rootDir": ".",
        "removeComments": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
    },
    "include": ["src/"],
    "exclude": ["node_modules", ".vscode-test"]
}
